<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boton_asi"
        android:orientation="horizontal"
        android:id="@+id/itemasig_item_click"
        android:padding="16dp">

        <ImageView
            android:id="@+id/itemasig_img_asig"
            android:layout_width="50dp"
            android:layout_marginTop="10sp"
            android:layout_height="50dp"
            android:src="@drawable/asigna_icon"
            android:contentDescription="GÃ©nero" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/itemasig_txt_nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre de la asignatura"
                android:textSize="20sp"
                android:fontFamily="@font/cairo_light"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/itemasig_txt_clavegru"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calve de grupo"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="15sp" />


        </LinearLayout>



    </LinearLayout>



</androidx.cardview.widget.CardView>
