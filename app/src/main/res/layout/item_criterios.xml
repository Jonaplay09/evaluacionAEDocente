<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#F6F6F6"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/itemcrit_click">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="start">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp">

                <TextView
                    android:id="@+id/itemcrit_txt_nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Criterio 1"
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/cairo_light"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:layout_gravity="end">
                <Button
                    android:layout_width="100sp"
                    android:layout_height="35sp"
                    android:layout_marginLeft="15dp"
                    android:text="Descripción"
                    android:id="@+id/btn_itmcrit_seleccionar"
                    android:background="@drawable/degradado_blue2"
                    android:fontFamily="@font/cairo_light"
                    android:textAlignment="center"
                    android:layout_marginRight="50sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="12sp"></Button>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="horizontal"
        android:layout_gravity="end|bottom"
        android:layout_marginRight="10sp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:orientation="horizontal"
            android:gravity="start">
        <EditText
            android:id="@+id/itemcrit_txt_criterio_especifico"
            android:layout_width="wrap_content"
            android:padding="10sp"
            android:layout_height="wrap_content"
            android:hint="Escriba el Criterio  Específico"
            android:background="@color/white"
            android:layout_marginTop="60sp"
            android:fontFamily="@font/cairo_light"
            android:textSize="19sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end">

        <EditText
            android:id="@+id/itemcrit_txt_puntos"
            android:layout_width="wrap_content"
            android:padding="10sp"
            android:gravity="end"
            android:layout_marginLeft="30sp"
            android:layout_height="wrap_content"
            android:hint="Puntos"

            android:background="@color/white"
            android:layout_marginTop="60sp"
            android:fontFamily="@font/cairo_light"
            android:textSize="17sp" />

        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>
