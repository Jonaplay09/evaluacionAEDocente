<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Configuracion">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/fondo_menu"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="13"
                android:backgroundTint="#F6F6F6"
                android:layout_margin="5dp"
                app:cardCornerRadius="20dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cambiar nombre"
                    android:layout_marginTop="10sp"
                    android:gravity="left"
                    android:id="@+id/config_name"
                    android:padding="20sp"
                    android:background="@color/white"/>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cambiar correo"
                        android:id="@+id/config_email"
                        android:layout_marginTop="10sp"
                        android:gravity="left"
                        android:padding="20sp"
                        android:background="@color/white"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cambiar contraseña"
                        android:id="@+id/config_pass"
                        android:layout_marginTop="10sp"
                        android:gravity="left"
                        android:padding="20sp"
                        android:background="@color/white"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Acerca de"
                        android:layout_marginTop="10sp"
                        android:id="@+id/config_about"
                        android:gravity="left"
                        android:padding="20sp"
                        android:background="@color/white"/>
                    <Button
                        android:layout_width="250dp"
                        android:id="@+id/config_logout"
                        android:layout_height="wrap_content"
                        android:text="Cerrar Sesión"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:fontFamily="@font/cairo_light"
                        android:layout_marginTop="270sp"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:background="@drawable/degradado_blue"/>
                </LinearLayout>


            </androidx.cardview.widget.CardView>



    </LinearLayout>

</FrameLayout>